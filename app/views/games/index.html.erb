<p id="notice"><%= notice %></p>



<div class="container">
  <div class="row">
    <h1>Games</h1>
  </div>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>Width</th>
          <th>Height</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.width %></td>
            <td><%= game.height %></td>
            <td><%= link_to 'Show', game %></td>
            <td> - </td>
            <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to 'New Game', new_game_path %>
  </div>
</div>


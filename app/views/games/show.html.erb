<%= stylesheet_link_tag "games" %>
<%= javascript_include_tag %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">

    <div class ="col-md-6">
      <table class="game">
        <% (1..@game.height).each do |h| %>
        <tr>
          <% (1..@game.width).each do |w| %>
          <td class="border-cell"></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-4">
      <h4>Learn</h4>
    </div>

    <div class="col-md-2">
      <div class="container">
        <div class="row">
          <h4>Bots</h4>
        </div>
        <div class="row">
          <%= link_to("New Bot", new_game_bot_path(@game))%>
        </div>
      </div>
    </div>

  </div>
  <div class="row">
    <%= link_to 'Back', games_path %>
  </div>
</div>


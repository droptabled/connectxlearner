<%= stylesheet_link_tag "games" %>
<%= javascript_include_tag %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h1>Players</h1>
      <table>
        <tr>
          <% @bots.each do |bot| %>
          <td> <%= bot.name %> </td>
          <% end %>
          <td>
            <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Add Bot
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <% @addable_bots.each do |bot| %>
              <a class="dropdown-item" href="#"><%= bot.name %></a>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <div class ="col-md-10">
      <table class="game">
        <% (1..@game.height).each do |h| %>
        <tr>
          <% (1..@game.width).each do |w| %>
          <td class="border-cell"></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to 'Back', games_path %>
  </div>
</div>

